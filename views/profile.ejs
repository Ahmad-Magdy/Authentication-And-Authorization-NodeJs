<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags always come first -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title><%=user.name%></title>
    <link rel="stylesheet" href="../css/boostrap.min.css">
    <script   src="https://code.jquery.com/jquery-3.0.0.min.js"   integrity="sha256-JmvOoLtYsmqlsWxa7mDSLMwa6dZ9rrIdtrrVYRnDRH0="   crossorigin="anonymous"></script>
    <script src="../script.js"></script>
</head>
<body>
<div class="container">
    <br><br><br>

    <div class="row">
        <div class="col-lg-6 col-lg-offset-3">
            <div class="panel panel-default">
                <div class="panel-body text-center">
                    <img src="<%=user.imageURL%>" class="img-circle img-thumbnail" alt="Cinque Terre" width="152" height="118">
                    <h2><%= user.name%></h2><span class="label label-success"><%= user.Role%></span><br>
                    <div class="col-lg-12">
                        <h4><%= user.bio%></h4>
                    </div>
                    <br><br><br><br>
                    <%if(show){%>
                    <a class= "btn btn-info" href="/edit/profile">Change Details</a>
                    <a class= "btn btn-danger" href="/logout">Logout</a>
                    <%}%>
                    <%if( user.Role == 'admin' && token){%>
                    <a class= "btn btn-danger" href="/admin">Admin Panel</a>
                    <%}%>
                </div>

            </div>
        </div>
    </div>
</div>
</body>
</html>